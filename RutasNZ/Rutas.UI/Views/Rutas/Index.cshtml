@model IEnumerable<Rutas.UI.Models.DTO.RutaDto>

<h1 class="mt-3"> Rutas</h1>

<div class="d-flex justify-content-end">
    <a class="btn btn-secondary" asp-controller="Rutas" asp-action="Agregar"> Agregar Ruta</a>
</div>

<div class="row">
    @foreach (var ruta in Model)
    {
        <div class="col-md-6 mb-3">
            <div class="card">
                <img src="@ruta.ImagenRutaUrl" alt="Imagen de la ruta" class="card-img-top" width="100%" height="350">
                <div class="card-body">
                    <h5 class="card-title">@ruta.Nombre</h5>
                    <p class="card-text">@ruta.Descripcion</p>
                    <p class="card-text">Longitud: @ruta.LongitudKm km</p>
                    <p class="card-text">Dificultad: @ruta.Id_Dificultad</p>
                    <p class="card-text">Región: @ruta.Id_Region</p>
                    <a asp-controller="Rutas" asp-action="Editar" asp-route-id="@ruta.Id_ruta" class="btn btn-light">Editar</a>
                </div>
            </div>
        </div>
    }
</div>